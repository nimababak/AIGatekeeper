apiVersion: apps/v1
kind: Deployment
metadata:
  name: aigatekeeper
spec:
  selector:
    matchLabels:
      app: aigatekeeper
  replicas: 3 # tells deployment to run X pods matching the template
  template:
    metadata:
      labels:
        app: aigatekeeper
        version: IMAGE_LABEL
    spec:
      containers:
      - name: aigatekeeper
        image: nimababak/aigatekeeper:IMAGE_LABEL
        ports:
        - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: aigatekeeper
spec:
  type: NodePort
  selector:
    app: aigatekeeper
  ports:
  - port: 80
    targetPort: 80
---
